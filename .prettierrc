{
  "semi": true,
  "tabWidth": 2,
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "all",
  "jsxSingleQuote": true,
  "bracketSpacing": true,

  "importOrder": [
    "<THIRD_PARTY_MODULES>",

    "(.*)enums$",
    "(.*)models$",
    "(.*)errors$",
    "(.*)usecases$",
    "(.*)types$",

    "(.*)protocols",
    "(.*)services",

    "(.*)hooks",
    "(.*)contexts",
    "(.*)components",
    "(.*)app",
    "(.*)utils",

    "(.*)adapters",
    "(.*)factories",

    "(.*)types",

    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true
}
