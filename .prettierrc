{
  "semi": true,
  "tabWidth": 2,
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "all",
  "jsxSingleQuote": true,
  "bracketSpacing": true,

  "importOrder": [
    "<THIRD_PARTY_MODULES>",

    "(.*)enums$",
    "(.*)models$",
    "(.*)errors$",
    "(.*)collections$",
    "(.*)hydration$",
    "(.*)usecases$",

    "(.*)protocols$",
    "(.*)observers$",
    "(.*)cruds$",
    "(.*)services$",

    "(.*)hooks$",
    "(.*)contexts$",
    "(.*)components$",
    "(.*)proxies$",
    "(.*)pages$",
    "(.*)app$",
    "(.*)styles$",
    "(.*)mixins$",
    "(.*)assets$",
    "(.*)utils$",

    "(.*)decorators$",
    "(.*)adapters$",
    "(.*)store$",
    "(.*)factories$",

    "(.*)types$",

    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true
}
